<!-- Vista para poder ver los datos de contacto de otro usuario -->
<div class="container">
  <div class="row">
    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 col-xs-offset-2 col-sm-offset-2 col-md-offset-2 col-lg-offset-2 toppad" >
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title"><%=@user.nombre + "  " + @user.apellido%></h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-3 col-lg-3 " align="center">
              <td><%= image_tag("#{@user.imagen}",:class=> "img-circular-perfil" ,:style => "border: 3px solid lightblue",height: 70, width: 70) %></td>
            </div>
            <div class=" col-md-9 col-lg-9 ">
              <table class="table table-user-information">
              <tbody>
                <tr>
                  <td>E-mail:</td>
                  <td><%=@user.email%></td>
                </tr>
                <tr>
                  <td>Telefono:</td>
                  <td><%=@user.telefono%></td>
                </tr>
                <tr>
                  <td>Localidad:</td>
                  <td><%=@user.localidad%></td>
                </tr>
              </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
