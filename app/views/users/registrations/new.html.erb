     <div class="field">
        <%= f.label :avatar %><br />
        <%= f.file_field :avatar %>

    </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true ,required: true %>
  </div>

  <div class="field">
    <%= f.label :contraseÃ±a %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres como minimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" ,required: true %>
  </div>

  <div class="field">
