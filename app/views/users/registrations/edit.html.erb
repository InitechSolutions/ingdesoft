<h1 style="color:#FF8000;">Editar Perfil</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <%= devise_error_messages! %>
<div class="container" style="margin-top:20px;">
<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
<div class="well">
<div class="media">

<%= f.label :imagen %><br />
  <div><%= image_tag("#{current_user.imagen}", height: 200, width: 200)%></div>
<br> 
  <div class="field">
    <%= f.text_field :imagen %></div>

  <div class="field">
    <%= f.label :Nombre %><br />
    <%= f.text_field :nombre %></div>


  <div class="field">
    <%= f.label :Apellido %><br />
    <%= f.text_field :apellido %></div>

  <div class="field">
    <%= f.label :telefono %><br />
    <%= f.text_field :telefono %></div>

  <div class="field">
    <%= f.label :Localidad %><br />
    <%= f.text_field :localidad %></div>

<br> 

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Todavía esperando confirmación de: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :contraseña %> <br> <i>(Deje en blanco si no quiere modificarlo)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caracteres como minimo</em>
    <% end %>
  </div>
<br />
  <div class="field">
    <%= f.label :confirmar_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  <br> 
  <div class="field">
    <%= f.label :contraseña_actual %> <br> <i>(Necesitamos su contraseña actual para confirmar los cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

<br> 

<%= f.submit "Actualizar", class:"btn-lg btn-warning" %>

<% end %>
</div>
</div>
</div>
</div>

 <td><button type="button" class="btn btn-warning"><i class="glyphicon glyphicon-remove-sign"></i><%= link_to " Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Esta seguro?" }, method: :delete %></button></td>

<td><button type="button" class="btn btn-warning"><i class="glyphicon glyphicon-chevron-left"></i><%= link_to "Atras", :back %></button></td>


</div>
</div>
</div>
</div>