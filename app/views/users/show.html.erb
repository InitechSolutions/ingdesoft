<div class="container">
  <div class="row">
    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 col-xs-offset-2 col-sm-offset-2 col-md-offset-2 col-lg-offset-2 toppad" >
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title"><%=@user.nombre + " " + @user.apellido%></h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-3 col-lg-3 " align="center">
              <td><%= image_tag("#{@user.imagen}",:class=> "img-circular-perfil" ,:style => "border: 3px solid lightblue",height: 70, width: 70) %></td>
            </div>
            <div class=" col-md-9 col-lg-9 ">
              <table class="table table-user-information">
              <tbody>
                <tr>
                  <td>E-mail:</td>
                  <td><%=@user.email%></td>
                </tr>
                <tr>
                  <td>Telefono:</td>
                  <td><%=@user.telefono%></td>
                </tr>
                <tr>
                  <td>Localidad:</td>
                  <td><%=@user.localidad%></td>
                </tr>
                <tr>
                  <td>Fecha de nacimiento:</td>
                  <td><%=@user.nacimiento%></td>
                </tr>
                <tr>
                  <td>Fecha de registro</td>
                  <td><%=@user.created_at%></td>
                </tr>
                <tr>
                  <td>Ultima Conexion</td>
                  <td><%=@user.last_sign_in_at%></td>
                </tr>
                <tr>
                  <td>Puntos</td>
                  <td><%=@user.puntos%></td>
                </tr>
              </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="panel panel-info">
          <div class="panel-heading">
            <h4 class="panel-title">Favores Publicados</h4>
        </div></div>
        <% @user.favors.where(:estado => "activo").all.each do |favor|%>
          <td><%= link_to favor.titulo, favor %></td>
          <td><%= link_to 'Ver Postulados', postulation_path(favor) %></td><br>
        <%end%>
        <div class="panel panel-info">
          <div class="panel-heading">
            <h4 class="panel-title">Favores Realizandose</h4>
        </div></div>
        <% @user.favors.where(:estado => "procesando").all.each do |favor|%>
          <td><%= link_to favor.titulo, favor %></td><br>
          <td><%= link_to 'Ver Postulado', user_path(favor.postulations.first.user_id) %></td><br>
        <%end%>
        <div class="panel panel-info">
          <div class="panel-heading">
            <h4 class="panel-title">Favores Cancelados</h4>
        </div></div>
        <% @user.favors.where(:estado => "cancelado").all.each do |favor|%>
            <td><%= link_to favor.titulo, favor %></td><br>
        <%end%>
        <div class="panel panel-info">
          <div class="panel-heading">
            <h3 class="panel-title">Postulaciones pendientes</h3>
        </div></div>
        <% @user.postulations.where(:estado => "pendiente").all.each do |p|%>
          <%= link_to p.favor.titulo , p.favor %><br>
        <%end%>
        <div class="panel panel-info">
          <div class="panel-heading">
            <h3 class="panel-title">Postulaciones aceptadas</h3>
        </div></div>
        <% @user.postulations.where(:estado => "seleccionado").all.each do |p|%>
          <%= link_to p.favor.titulo, p.favor %><br>
        <%end%>
      </div>
    </div>
  </div>
</div>
