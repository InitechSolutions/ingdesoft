

<h1 style="color:#FF8000;">Postulados</h1>
<div class='container'>
<div class="row">
<div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1">
<div class="table-responsive">
<table class="table table-striped table-hover table-success">
  <thead>
    <tr>
      <th></th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Estado</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @postulations.each do |p| %>
      <tr>
      <td><%= image_tag("#{p.user.imagen}",:class=> "img-circular" ,:style => "border: 3px solid orange",height: 70, width: 70) %></td>
        <td><%= p.user.nombre %></td>
        <td><%= p.descripcion%></td>
        <td><%= p.estado%></td>
        <td>
        <button type="button" class="btn btn-warning"><%= link_to 'Elegir', elegir_postulations_path(:favor_id => p.favor_id, :user_id => p.user_id) %></button>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
</div>
<br>
