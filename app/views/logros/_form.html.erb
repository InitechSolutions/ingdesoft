<%= form_for(logro) do |f| %>
  <% if logro.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(logro.errors.count, "error") %> prohibited this logro from being saved:</h2>

      <ul>
      <% logro.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Nombre %><br />
    <%= f.text_field :nombre, placeholder: "Nombre"%>
  </div>

  <div class="field">
    <%= f.label :Puntaje_Minimo %><br />
    <%= f.number_field :min, placeholder: "Puntaje minimo" %>
  </div>

  <div class="field">
    <%= f.label :Puntaje_Maximo %><br />
    <%= f.number_field :max, placeholder: "Puntaje maximo" %>
  </div>

  <% if params[:action] == 'edit' %>
    <%= image_tag("#{@logro.imagen}", height: 75, width: 75) %>
  <% end %>

  <div class="field">
    <%= f.label :imagen %><br />
    <%= f.text_field :imagen %>
  </div>

  <div class="actions">
    <%= f.submit "Confirmar" %>
  </div>
  
<% end %>
