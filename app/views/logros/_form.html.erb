
<div class="container" style="margin-top:20px;">
<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
<div class="well">
<div class="media">

<%= form_for(logro) do |f| %>
  <% if logro.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(logro.errors.count, "error") %> prohibited this logro from being saved:</h2>

      <ul>
      <% logro.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Nombre %><br />
    <%= f.text_field :nombre, placeholder: "Nombre"%>
  </div>

  <div class="field">
    <%= f.label :Puntaje_Minimo %><br />
    <%= f.number_field :min, placeholder: "Puntaje minimo" %>
  </div>

  <div class="field">
    <%= f.label :Puntaje_Maximo %><br />
    <%= f.number_field :max, placeholder: "Puntaje maximo" %>
  </div>

  <% if params[:action] == 'edit' %>
    <%= image_tag("#{@logro.imagen}",:style => "border: 3px solid orange", height: 150, width: 150) %>
  <% end %>
<br><br>
  <div class="field">
    <%= f.label :imagen %><br />
    <%= f.text_field :imagen,size: "40x10", placeholder: "URL de la imagen del logro" %>
  </div>


  <%= f.submit " Confirmar", class:"btn-lg btn-warning" %>

</div>
</div>
</div>
</div>
<% end %>
