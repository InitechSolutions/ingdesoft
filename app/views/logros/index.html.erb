

<h1 style="color:#FF8000;">Tabla de Logros</h1>
<div class='container'>
<div class="row" >
<div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1">
<div class="table-responsive">
<table class="table table-striped table-hover table-success">
  <thead>
    <tr>
      <th>Imagen</th>
      <th>Nombre</th>
      <th>Mínimo</th>
      <th>Máximo</th>
      <th>Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @logros.each do |logro| %>
      <tr>
      <td><%= image_tag("#{logro.imagen}",:class=> "img-circular" ,:style => "border: 3px solid orange",height: 70, width: 70) %></td>
        <td><%= logro.nombre %></td>
        <td><%= logro.min %></td>
        <td><%= logro.max %></td>
        <td>
        <button type="button" class="btn btn-warning"><i class="glyphicon glyphicon-search"></i><%= link_to ' Ver', logro %></button>
        <button type="button" class="btn btn-warning"><i class="glyphicon glyphicon-pencil"></i><%= link_to ' Editar', edit_logro_path(logro) %></button>
        <button type="button" class="btn btn-warning"><i class="glyphicon glyphicon-remove"></i><%= link_to ' Eliminar',  logro, method: :delete, data: {confirm: 'Esta seguro que desea eliminar el logro  ? ' } %></button>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
</div>
<br>

<button type="button" class="btn-lg btn-warning"><i class="glyphicon glyphicon-plus"></i><%= link_to ' Crear Nuevo Logro', new_logro_path %></button>