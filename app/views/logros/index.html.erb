<p id="notice"><%= notice %></p>

<font color="lime" size="8" face="times new roman">Tabla de Logros</font>

<table border=1 WIDTH=80% >
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Min</th>
      <th>Max</th>
      <th>Opciones</th>
      <th> </th>
      <th> </th>

    </tr>
  </thead>

  <tbody>
    <% @logros.each do |logro| %>
      <tr>
        <td><%= logro.nombre %></td>
        <td><%= logro.min %></td>
        <td><%= logro.max %></td>
        <td><%= link_to 'Ver', logro %></td>
        <td><%= link_to 'Editar', edit_logro_path(logro) %></td>
        <td><%= link_to 'eliminar', logro, method: :delete, data: { confirm: 'Esta seguro que desea eliminar ese logro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Logro', new_logro_path %>
