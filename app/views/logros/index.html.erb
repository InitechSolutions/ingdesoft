

<h1 style="color:#FF8000;">Tabla de Logros</h1>
<div class="table-responsive">
<table class="table table-striped table-hover table-success">
  <thead>
    <tr>
      <th width="25%">&nbsp;&nbsp;Nombre</th>
      <th width="25%">Min</th>
      <th width="25%">Max</th>
      <th width="25%">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @logros.each do |logro| %>
      <tr>
        <td>&nbsp;&nbsp;<%= logro.nombre %></td>
        <td><%= logro.min %></td>
        <td><%= logro.max %></td>
        <td><%= link_to 'Ver  ', logro %>&nbsp; &nbsp;
        <%= link_to 'Editar  ', edit_logro_path(logro) %>&nbsp; &nbsp;
        <%= link_to 'Eliminar  ', logro, method: :delete, data: {confirm: 'Esta seguro que desea eliminar el logro  ? ' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>


<font size="5"><%= link_to 'Crear Nuevo Logro', new_logro_path %></font>
