<% if user_signed_in? %>
    <button type="button" class="btn-lg btn-warning" style="margin-bottom:10px"><i class="glyphicon glyphicon-plus"></i>
    <%= link_to ' Crear Favor', new_favor_path %></button>
<%end%>
<!-- Field de busqueda -->
<%= form_tag(lugar_favors_path , :method => "get") do %>
<%= text_field_tag :busqueda,nil, placeholder: 'Palabra a buscar...' %>

<!-- Botones de submit de filtro agrupados -->
<div class="btn-group">
  <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Buscar Favor por <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <li> <a> <%= submit_tag 'Localidad', class:"btn btn-link"%></a></li>
    <li> <a> <%= submit_tag 'Titulo/descripcion', class: "btn btn-link", formaction: titulo_descripcion_favors_path%></a></li>
  </ul>
</div>
<% end %>
<div class="container" style="margin-top:20px;">
  <% @favors.each do |favor| %>
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <div class="well" style="border-radius: 35px;">
        <div class="media">
          <d class="pull-left" href="#">
            <p class="round-image-150 img-responsive"><%= image_tag("#{favor.user.imagen}") %></p>
              <p><%= favor.user.nombre + " " + favor.user.apellido%></p>
          </d>

          <div class="media-body">
            <h2 class="media-heading" style="margin-top:15px; margin-bottom:30px;"><%=favor.titulo%></h2>
              <p style="margin-bottom:30px;"><%= (favor.descripcion).truncate_words(10) %> <%= link_to 'Ver mas', favor %></p>
              <p class="img-responsive"><%= image_tag("#{favor.imagen}",height: 250, width: 250) %></p>
              <ul class="list-inline list-unstyled">
              <li><span><i class="glyphicon glyphicon-calendar"></i> <%= favor.created_at%> </span></li>
              <li>|</li>
              <span><i class="glyphicon glyphicon-comment"></i> Comentarios</span>
              <li>|</li>
              <li> <p> Localidad: <%= favor.lugar%></p></li>
              <%if (user_signed_in? && current_user.id == favor.user_id)%>
                <br>
                <td><button type="button" class="btn btn-warning"><i class="glyphicon glyphicon-pencil"></i><%= link_to ' Editar', edit_favor_path(favor) %></button></td>
                <td><button type="button" class="btn btn-warning"><i class="glyphicon glyphicon-remove"></i><%=link_to 'Eliminar', favor, method: :delete, data: { confirm: 'Estas seguro?' } %></button></td>
                </br>
              <%end%>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
