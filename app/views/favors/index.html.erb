                <td><button type="button" class="btn btn-warning"><i class="glyphicon glyphicon-pencil"></i><%= link_to ' Editar', edit_favor_path(favor) %></button></td>
                <td><button type="button" class="btn btn-warning"><i class="glyphicon glyphicon-remove"></i><%=link_to 'Eliminar', favor, method: :delete, data: { confirm: 'Estas seguro?' } %></button></td>
