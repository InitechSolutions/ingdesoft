              <p><%= image_tag("#{favor.imagen}",height: 350, width: 350) %></p>
              <ul class="list-inline list-unstyled">
              <li><span><i class="glyphicon glyphicon-calendar"></i> <%= favor.created_at%> </span></li>
              <li>|</li>
              <span><i class="glyphicon glyphicon-comment"></i> Comentarios</span>
              <li>|</li>
              <li> <p> Localidad: <%= favor.lugar%></p></li>
              <%if (user_signed_in? && current_user.id == favor.user_id)%>
